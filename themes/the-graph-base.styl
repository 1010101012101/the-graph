.the-graph-app {
  background-color: hsl(0, 0%, 0%);
  position: relative;
}

.app-canvas,
.app-svg {
  position: absolute;
  top: 0;
  left: 0;
}

svg {
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
.view {
}
.arrow {
  cursor: default;
}
.click {
  cursor: pointer;
}
.drag {
  cursor: pointer;
  cursor: -moz-grab;
  cursor: -webkit-grab;
  cursor: grab;
}
.node-rect {
  fill: hsla(192, 25%, 92%, 0.8);
  /*fill: hsla(0, 0%, 0%, 0.75);*/
  stroke: hsla(0, 0%, 100%, 1.0);
  stroke-width: 2px;
}
.ex-inports .node-rect {
  stroke: hsl(30, 60%, 60%);
}
.ex-outports .node-rect {
  stroke: hsl(120, 60%, 60%);
}
.node:hover .node-rect {
  fill: hsla(192, 25%, 92%, 0.9);
}
.small .node-rect {
  fill: hsla(0, 0%, 10%, 0.9);
  stroke: none;
}
.node-bg {
  opacity: 0;
}
.node.selected .node-rect {
  stroke: hsl(0, 100%, 50%);
  stroke-width: 4px;
}

path {
  fill: none;
}
.edge-bg {
  stroke: black;
  stroke-width: 4px;
}
.edge:hover .edge-bg {
  stroke: gray;  
}
.edge.selected .edge-bg {
  stroke-width: 8px;
  stroke: red;
}
.edge-fg {
  stroke: white;
  stroke-width: 2px;

  transition-property: stroke-width;
  transition-duration: 0.5s;
}
.edge-touch {
  stroke: white;
  stroke-width: 10px;
  opacity: 0;
}
.small .edge-bg {
  stroke-width: 8px;
}
.small .edge-fg {
  stroke-width: 4px;
}

text {
  font-family: "SourceCodePro", "Source Code Pro", Helvetica, Arial, sans-serif;
  text-rendering: geometricPrecision; /* makes text scale smoothly */
  font-size: 14px;
  fill: white;
  text-anchor: middle;
  dominant-baseline: central;
}

.text-bg-rect {
  fill: hsla(0, 0%, 0%, 0.5);
}

.node-label,
.node-sublabel {
  text-anchor: middle;
}
.small .node-label-bg {
  visibility: hidden;
}

.node-sublabel {
  font-size: 9px;
}
.node-sublabel-bg {
  visibility: hidden;
}
.big .node-sublabel-bg {
  visibility: visible;
}


/* IIPs */
.iip-path {
  stroke-width: 1px;
  stroke: white;
}
.iip-info {
  visibility: hidden;
}
.iip-info .text-bg-text {
  font-size: 5px;
  text-anchor: end;
}
.big .iip-info {
  visibility: visible;
}


/* Context menu - node */
.context-modal-bg {
  fill: rgba(0,0,0,0.5);
}
.context-node-rect {
  fill: hsl(0, 0%, 10%);
  stroke: hsl(0, 0%, 50%);
  stroke-width: 0.5px;
}
.context-node-icon {
  font-size: 30px;
  fill: hsl(0, 0%, 100%);
}
.context-icon {
  font-size: 20px;
  fill: hsl(0, 0%, 100%);
}
.context-node-label {
  text-anchor: middle;
}
.context-arc {
  stroke-width: 72px;
  stroke: hsla(211, 12%, 19%, 0.95);
}
.context-slice.click:hover .context-arc {
  stroke: hsla(211, 12%, 40%, 0.95);
}
.context-circle {
  stroke: hsl(0, 0%, 75%);
  fill: none;
  stroke-width: 1.5px;
}
.context-circle-x {
  stroke: hsl(0, 0%, 50%);
  fill: none;
  stroke-width: 1px;
}

.context-arc-icon-label {
  font-size: 12px;
}


/* Context menu - port */
.context-port-bg {
  fill: hsla(211, 12%, 19%, 0.95);
}
.context-port-hole {
  stroke-width: 2px;
  fill: hsla(211, 12%, 19%, 0.95);
  stroke: hsl(0, 0%, 75%);
}
.context-port-path {
  stroke: hsl(0, 0%, 75%);
}
.context-port-label {
  fill: white;
  dominant-baseline: central;
}
.context-port-in .context-port-label {
  text-anchor: end;
}
.context-port-out .context-port-label {
  text-anchor: start;
}



/* Context menu - edge */
.context-edge-label-out {
  text-anchor: end;
  dominant-baseline: central;
}
.context-edge-label-in {
  text-anchor: start;
  dominant-baseline: central;
}


.tooltip {
  opacity: 1.0;

  transition-property: opacity;
  transition-duration: 0.3s;
}
.tooltip.hidden {
  opacity: 0;
}
.tooltip-bg {
  fill: black;
  opacity: 0.75;
}
.tooltip-label {
  text-anchor: start;
  font-size: 10px;
}

.icon {
  font-family: 'FontAwesomeSVG';
  text-anchor: middle;
  dominant-baseline: central;
}
.node-icon {
  font-size: 40px;
  fill: hsl(194, 8%, 15%);

  transition-property: font-size, fill;
  transition-duration: 0.5s,      0.3s;
}
.small .node-icon {
  fill: hsl(0, 0%, 100%);
  font-size: 68px;
}
.big .node-icon {
  fill: hsl(194, 8%, 85%);
}
.ex-inports .node-icon {
  stroke: hsl(30, 60%, 60%);
  fill: hsl(30, 60%, 60%);
}
.small .ex-inports .node-icon {
  fill: hsl(30, 60%, 60%);
}
.ex-outports .node-icon {
  stroke: hsl(120, 60%, 60%);
  fill: hsl(120, 60%, 60%);
}
.small .ex-outports .node-icon {
  fill: hsl(120, 60%, 60%);
}

.port-circle {
  fill: black;
  stroke: hsl(0, 0%, 50%);
  stroke-width: 1px;
}
.small .port-circle {
  visibility: hidden;
}
.port-label {
  fill: hsl(188, 6%, 25%); /* type-grey */
  visibility: hidden;
  font-size: 6px;
  dominant-baseline: central;
}

.inports .port-label {
  text-anchor: start;  
}
.outports .port-label {
  text-anchor: end;  
}
.big .port-label {
  visibility: visible;
}
.big .ex-inports .port-label,
.big .ex-outports .port-label {
  visibility: hidden;
}


/* Groups */
.group-box {
  transition-property: fill;
  transition-duration: 0.3s;
}

