.group-box.selection { 
  fill: hsla(0, 100%, 70%, 0.15); 
  stroke: hsl(0, 100%, 50%);
  stroke-width: 1px;
}
.group-box.selection:hover { 
  fill: hsla(0, 100%, 70%, 0.25); 
}

.group-label {
  text-anchor: start;  
  fill: white;
  font-size: 20px;
  transition-property: font-size;
  transition-duration: 0.5s;
}
.small .group-label {
  font-size: 30px;
  transition-property: font-size;
  transition-duration: 0.5s;
}

.group-description {
  fill: hsl(0, 0%, 75%);
  font-size: 12px;
  text-anchor: start;  
}
.small .group-description {
  visibility: hidden;
}

