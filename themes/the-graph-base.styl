.group-box.color6:hover  { fill: hsla(150, 100%, 70%, 0.15); }
.group-box.color7:hover  { fill: hsla(180, 100%, 70%, 0.15); }
.group-box.color8:hover  { fill: hsla(210, 100%, 70%, 0.15); }
.group-box.color9:hover  { fill: hsla(240, 100%, 70%, 0.15); }
